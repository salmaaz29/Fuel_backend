<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence
             https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">

    <persistence-unit name="stationpu" transaction-type="RESOURCE_LOCAL">
        <class>ma.fstt.ws_rest_api.entities.Station</class>
        <class>ma.fstt.ws_rest_api.entities.Carburant</class>
        <class>ma.fstt.ws_rest_api.entities.HistCarb</class>

        <properties>
            <!-- Configuration MySQL directe -->
            <property name="jakarta.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>
            <property name="jakarta.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/station_db?useSSL=false&amp;serverTimezone=UTC"/>
            <property name="jakarta.persistence.jdbc.user" value="root"/>
            <property name="jakarta.persistence.jdbc.password" value=""/>

            <!-- Hibernate properties -->
            <property name="hibernate.hbm2ddl.auto" value="update"/>
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.format_sql" value="true"/>


            <!-- IMPORTANT: DÃ©sactiver la validation JTA -->
            <property name="hibernate.transaction.jta.platform" value=""/>
        </properties>
    </persistence-unit>
</persistence>